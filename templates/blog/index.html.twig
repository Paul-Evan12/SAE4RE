{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #222;
            color: #fff;
        }
        nav {
            background-color: #000;
            padding: 12px 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .navbar {
            list-style: none;
            display: flex;
            justify-content: center;
            margin: 0;
            padding: 0;
            gap: 30px;
        }

        .navbar li {
            margin: 0;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .navbar a:hover {
            text-decoration: underline;
        }

        .container {
            background-color: #333333ff;
            color: #fff;
            padding: 30px;
            border-radius: 10px;
            width: 80%;
            max-width: 600px;
            margin: 100px auto 20px; /* margin-top augmenté pour tenir compte de la nav fixe */
            text-align: center;
        }

        h1 {
            font-size: 36px;
            color: #fff;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 30px;
            color: #fff;
        }

        .btn {
            padding: 12px 30px;
            background-color: #131111ff;
            color: white;
            text-decoration: none;
            font-size: 18px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #bbb;
            color: #222;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            margin-top: 40px;
            font-size: 14px;
        }

        h1, h2, h3, h4, h5, h6, p, a, footer {
            color: #fff;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.loisir-item').forEach(function(item) {
                const img = item.querySelector('img');
                const text = item.querySelector('.loisir-text');
                img.addEventListener('mouseenter', function() {
                    text.style.display = 'inline-block';
                });
                img.addEventListener('mouseleave', function() {
                    text.style.display = 'none';
                });
            });
        });
    </script>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}CV - Téléchargement{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
<nav>
    <ul class="navbar">
        <li><a href="{{ path('app_index') }}">Accueil</a></li>
        <li><a href="{{ path('app_blog_presentation') }}">Présentation</a></li>
        <li><a href="{{ path('app_blog_competences') }}">Compétences</a></li>
    </ul>
</nav>
<div class="cv-form-container" style="text-align:center;padding-bottom:120px;">
    <h1>Mon CV</h1>
    
    <div class="cv-viewer" style="margin:32px auto;max-width:700px;">
        <iframe src="https://drive.google.com/file/d/1N5EOgMP0PQesK1lusT3k--z5RvPAkvZZ/preview" width="100%" height="480" style="border-radius:12px;border:2px solid #444;background:#111;box-shadow:0 2px 16px #0006;" allowfullscreen></iframe>
    </div>

    <div style="max-width:500px;margin:0 auto;">
        <p style="margin-bottom:24px;">Si vous souhaitez me contacter, laissez vos informations :</p>
        
        <div style="background:#222;padding:24px;border-radius:12px;margin-bottom:20px;">
            <div style="margin-bottom:16px;">
                <label for="nom" style="display:block;margin-bottom:6px;">Votre nom (optionnel) :</label>
                <input type="text" id="nom" style="width:100%;padding:10px;border-radius:6px;border:1px solid #555;background:#333;color:#fff;">
            </div>
            
            <div style="margin-bottom:20px;">
                <label for="email" style="display:block;margin-bottom:6px;">Votre email (optionnel) :</label>
                <input type="email" id="email" style="width:100%;padding:10px;border-radius:6px;border:1px solid #555;background:#333;color:#fff;">
            </div>
            
            <div style="display:flex;justify-content:center;gap:18px;flex-wrap:wrap;">
                <a href="https://drive.google.com/uc?export=download&id=1N5EOgMP0PQesK1lusT3k--z5RvPAkvZZ" target="_blank" class="btn" style="background:#28a745;text-decoration:none;display:inline-block;">Télécharger le CV</a>
                <a href="https://drive.google.com/file/d/1N5EOgMP0PQesK1lusT3k--z5RvPAkvZZ/preview" target="_blank" class="btn" style="background:#007bff;text-decoration:none;display:inline-block;">Visualiser en plein écran</a>
            </div>
            
            <div id="message" style="margin-top:16px;font-weight:bold;color:#00ff00;"></div>
        </div>
    </div>
</div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
